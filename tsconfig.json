{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist"
  ]
}
