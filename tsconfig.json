{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "target": "es5",
        "sourceMap": false,
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true
    },
    "exclude": ["node_modules", "coverage", ".nyc_output", "dist", "src/template"]
}
